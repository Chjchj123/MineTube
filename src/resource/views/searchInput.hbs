
    {{#each data}}
    <div class="col-sm-6 col-lg-4">
        <div class="card" style="margin-top: 16px;">
            <a href="/song/{{this.slug}}">
                <img src="{{this.image}}" class="card-img-top" alt="{{this.image}}">
            </a>
            <div class="card-body">
                <a href="/song/{{this.slug}}">
                    <h5 class="card-title song-name">{{this.name}}</h5>
                </a>
                <p class="card-text">{{this.author}}</p>
                <h6 class="card-title">Upload By: {{this.uploadBy}}</h6>
                <p class="card-text">{{this.description}}</p>
                <a href="/song/{{this.slug}}" class="btn btn-primary">Xem</a>
                <a href="/song/update-song/{{this.slug}}" class="btn btn-primary">Edit</a>
                <a href="/" class="btn btn-primary delete-Toast" data-toggle="modal" data-upload="{{this.uploadBy}}" data-delete="{{this.slug}}">Delete</a>
            </div>
        </div>
    </div>
    {{else}}
        <div>
            <h1 class="empty-song">We Can't Find Any Song Have That Result. <a href="/song/admin-show">Upload Your Songs Now!</a></h1>
        </div>
    {{/each}}

<div class="modal fade" id="delete-modal">
            <div class="modal-dialog">
                <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Notification</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are You Sure To Delete This Song?
                </div>
                <form id="delete-song-form" method="POST" action="/song/delete/{{data.slug}}?_method=DELETE">
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Back</button>
                    <button type="submit" class="btn btn-danger" id="delete-btn">Delete</button>
                </div>
                </div>
                </form>
            </div>
</div>

